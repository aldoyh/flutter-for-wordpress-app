// ... existing code ...
      body: SingleChildScrollView(
        child: NavigationBar(
          previousButton: IconButton(
            icon: Icons.back,
            color: Theme.of(context).primaryColor,
            onPressed: () {
              if (currentPage > 1) {
                currentPage--;
                setState(() => _HomePageState(posts, currentPage - 1));
              }
            },
          ),
          currentPageLabel: Text('Home'),
          nextButton: IconButton(
            icon: Icons.forward,
            color: Theme.of(context).primaryColor,
            onPressed: () {
              if (currentPage < 2) {
                currentPage++;
                setState(() => _HomePageState(posts, currentPage + 1));
              }
            },
          ),
        ),
        child: SplashScreen(),
      );
